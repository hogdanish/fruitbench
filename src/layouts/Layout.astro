---
import '../global.css'

import { Font } from 'astro:assets'
import { Head } from 'astro-capo'

interface Props {
  title?: string
}

const { title = 'Fruitbench' } = Astro.props
---

<!doctype html>
<html lang="en" data-theme="nord">
  <Head>
    <!-- ☝️ This script prevent the FART effect for theme switching -->
    <script is:inline>
      if (localStorage.getItem('theme') === null) {
        document.documentElement.setAttribute('data-theme', 'nord')
      }
 else {
        document.documentElement.setAttribute('data-theme', localStorage.getItem('theme'))
      }
      // "theme" LocalStorage value is set by the package to remember user preference.
      // The value is checked and applyed before rendering anything.
    </script>

    <script>
      import { themeChange } from 'theme-change'

      themeChange()
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Rank your favorite fruits on flavor, nourishment, reliability, and practicality. Compare results with friends!"
    />
    <title>{title}</title>
    <Font cssVariable="--font-sans" preload={[{ subset: 'latin', style: 'normal' }]} />
  </Head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-sans), sans-serif;
    overflow: hidden;
  }

  #app {
    height: 100vh;
  }
</style>
